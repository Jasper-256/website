---
interface Props {
  activePage?: "home" | "projects" | "games";
}

const { activePage } = Astro.props;
---

<div class="topnav">
  <a class={`nav-home ${activePage === "home" ? "active" : ""}`} href="/">
    <img src="/favicon-180x180.png" alt="" class="nav-avatar" />
    Jasper Morgal
  </a>
</div>

<style>
  .nav-home {
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }
  .nav-avatar {
    width: 20px;
    height: 20px;
    border-radius: 50%;
  }
</style>
