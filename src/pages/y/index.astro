---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Y - Jasper Morgal">
  <h1>Y</h1>
  <canvas id="board"></canvas>
  <p id="status">Your turn (red)</p>
  <p id="swap-container"></p>
  <p>
    MCTS iterations:
    <label>
      <select id="iterations">
        <option value="10000">10k</option>
        <option value="20000" selected>20k</option>
        <option value="50000">50k</option>
        <option value="100000">100k</option>
      </select>
    </label>
  </p>
  <p class="pointer" id="newgame">New game</p>
  <p><a href="/y/friend">Play with a friend</a></p>
  <script>
    import "@/scripts/y";
  </script>
</Layout>

<style>
  h1 {
    margin-bottom: 0.25em;
  }
  p {
    font-family: "Menlo", monospace;
  }
  select {
    vertical-align: top;
  }
  canvas {
    display: block;
    width: min(100%, 60vh);
    aspect-ratio: 1 / 1;
    margin: 0 auto;
  }
</style>
